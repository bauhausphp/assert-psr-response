{
    "name": "fefas/assert-psr-response",
    "description": "PHP package with class to assert PSR responses",

    "type": "library",
    "license": "MIT",

    "authors": [
        {
            "name": "Felipe Martins",
            "email": "me@fefas.net"
        }
    ],

    "scripts": {
        "test:cs": "phpcs --colors -ps",
        "test:unit": "phpunit --colors=always"
    },

    "autoload": {
        "psr-4": {
            "Fefas\\AssertPsrResponse\\": "src/"
        },
        "files": [
            "vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"
        ]
    },

    "autoload-dev": {
        "psr-4": {
            "Fefas\\AssertPsrResponse\\": "tests/"
        }
    },

    "minimum-stability": "stable",

    "require": {
        "php": ">=7.1",
        "phpunit/phpunit": "^6.5",
        "psr/http-message": "^1.0"
    },

    "require-dev": {
        "squizlabs/php_codesniffer": "^3.2"
    }
}
