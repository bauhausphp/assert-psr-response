{
    "name": "fefas/assert-psr-response",
    "description": "PHP package with class to assert PSR responses",
    "keywors": ["psr-7", "psr", "assert", "response"],

    "type": "library",
    "license": "MIT",

    "authors": [
        {
            "name": "Felipe Martins",
            "email": "me@fefas.net"
        }
    ],

    "scripts": {
        "test:cs": "phpcs --colors -ps",
        "test:unit": "phpunit --colors=always"
    },

    "autoload": {
        "psr-4": {
            "Fefas\\AssertPsrResponse\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Fefas\\AssertPsrResponse\\": "tests/"
        }
    },

    "minimum-stability": "stable",

    "require": {
        "php": ">=7.2",
        "psr/http-message": "^1.0",
        "fefas/jsoncoder": "^v0.2"
    },

    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "squizlabs/php_codesniffer": "^3.2"
    }
}
